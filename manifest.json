{
  "manifest_version": 3,
  "name": "Moozi Lyrics Translator",
  "version": "1.0.0",
  "description": "Translate and explain lyrics on any website with one click",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Moozi Lyrics"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-scripts/content-script.js"],
      "css": ["styles/content.css"]
    }
  ],
  "side_panel": {
    "default_path": "side-panel/index.html"
  },
  "permissions": [
    "sidePanel",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ]
}